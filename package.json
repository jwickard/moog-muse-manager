{
  "name": "moog-muse-manager",
  "version": "0.1.0",
  "description": "A desktop application to manage sound patches and step-sequencer files for the Moog Muse synthesizer",
  "main": "dist/main/main.js",
  "scripts": {
    "start": "electron-forge start",
    "package": "electron-forge package",
    "make": "electron-forge make",
    "publish": "electron-forge publish",
    "dev": "vite",
    "clean": "rimraf dist",
    "build:main": "tsc -p tsconfig.main.json",
    "build:preload": "tsc -p tsconfig.preload.json",
    "build:renderer": "vite build",
    "build": "npm run lint && npm run clean && mkdir -p dist/main dist/preload dist/renderer && npm run build:main && npm run build:preload && npm run build:renderer",
    "lint": "eslint . --ext .ts,.tsx --config config/.eslintrc.json",
    "lint:fix": "eslint . --ext .ts,.tsx --fix --config config/.eslintrc.json",
    "preview": "vite preview",
    "test:main": "jest --config config/jest.main.config.js --passWithNoTests",
    "test:renderer": "jest --config config/jest.renderer.config.js --passWithNoTests",
    "test": "npm run test:main && npm run test:renderer",
    "db-reset": "rimraf ~/Library/Application\\ Support/moog-muse-manager/patches.db",
    "workflow:run": "gh workflow run ci.yml",
    "workflow:lint": "gh workflow run ci.yml -f job=lint",
    "workflow:security": "gh workflow run ci.yml -f job=security",
    "workflow:build": "gh workflow run ci.yml -f job=build",
    "workflow:list": "gh run list",
    "workflow:view": "gh run view"
  },
  "author": "",
  "license": "MIT",
  "dependencies": {
    "@julusian/midi": "^3.0.0",
    "better-sqlite3": "^9.6.0",
    "electron-squirrel-startup": "^1.0.0",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "zustand": "^4.5.1"
  },
  "devDependencies": {
    "@electron-forge/cli": "^7.2.0",
    "@electron-forge/maker-deb": "^7.2.0",
    "@electron-forge/maker-rpm": "^7.2.0",
    "@electron-forge/maker-squirrel": "^7.2.0",
    "@electron-forge/maker-zip": "^7.2.0",
    "@electron-forge/plugin-auto-unpack-natives": "^7.2.0",
    "@electron-forge/plugin-vite": "^7.2.0",
    "@semantic-release/changelog": "^6.0.3",
    "@semantic-release/git": "^10.0.1",
    "@semantic-release/github": "^9.2.6",
    "@semantic-release/npm": "^11.0.2",
    "@testing-library/jest-dom": "^6.6.3",
    "@testing-library/react": "^16.3.0",
    "@types/better-sqlite3": "^7.6.13",
    "@types/jest": "^29.5.14",
    "@types/node": "^20.11.24",
    "@types/react": "^18.2.56",
    "@types/react-dom": "^18.2.19",
    "@typescript-eslint/eslint-plugin": "^7.0.0",
    "@typescript-eslint/parser": "^7.0.0",
    "@vitejs/plugin-react": "^4.2.1",
    "autoprefixer": "^10.4.17",
    "electron": "^28.2.3",
    "eslint": "^8.56.0",
    "eslint-plugin-react-hooks": "^4.6.0",
    "eslint-plugin-react-refresh": "^0.4.5",
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^29.7.0",
    "postcss": "^8.4.35",
    "rimraf": "^5.0.10",
    "rollup": "^3.29.4",
    "semantic-release": "^22.0.7",
    "tailwindcss": "^3.4.1",
    "ts-jest": "^29.3.4",
    "typescript": "^5.2.2",
    "vite": "^5.1.4",
    "vite-plugin-electron": "^0.28.0",
    "vite-plugin-electron-renderer": "^0.14.5"
  }
}
